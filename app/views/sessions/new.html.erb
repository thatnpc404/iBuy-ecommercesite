<!-- app/views/sessions/new.html.erb -->

<div class="container mt-5">
  <h1 class="text-center mb-4">Login</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: user_login_path, method: :post, class: "border p-4 shadow-sm" do %>
        <div class="form-group mb-3">
          <%= label_tag :email, "Email", class: "form-label" %>
          <%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter your email" %>
        </div>

        <div class="form-group mb-3">
          <%= label_tag :password, "Password", class: "form-label" %>
          <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="d-grid">
          <%= submit_tag "Log in", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <p>Don't have an account? <%= link_to 'Sign up', new_user_path, class: 'text-primary' %></p>
      </div>
    </div>
  </div>
</div>
