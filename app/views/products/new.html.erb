<%= form_with(model: @product, method: :post, local: true) do |form| %>
  <div class="container mt-4">
    <h2>Add New Product</h2>

    <div class="form-group">
      <%= form.label :category_id, "Category", class: "form-label" %>
      <%= form.collection_select :category_id,
                             @categories,
                             :id,
                             :name,
                             { prompt: "Select a Category" },
                             class: "form-control",
                             required: true %>
    </div>

    <div class="form-group">
      <%= form.label :name, "Product Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :price, "Price", class: "form-label" %>
      <%= form.number_field :price, step: 0.01,min: 1, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :img_url, "Image", class: "form-label" %>
      <%= form.file_field :img_url, class: "form-control",accept: "image/jpeg,image/png", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :stock_quantity, "Stock Quantity", class: "form-label" %>
      <%= form.number_field :stock_quantity, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.submit "Add Product", class: "btn btn-primary", required: true %>
    </div>
  </div>
<% end %>
