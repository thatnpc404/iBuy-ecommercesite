<div class="container mt-4">
  <h1 class="text-center mb-4">Order Details</h1>

  <div class="card mb-4">
    <div class="card-header">
      Order ID: <%= @order.id %>
    </div>
    <div class="card-body">
      <h5 class="card-title">Invoice</h5>
      <p><strong>Order Placed by:</strong> <%= @user.first_name %></p>
      <p><strong>Email:</strong> <%= @user.email %></p>
      <p><strong>Address:</strong> <%= @order.shipping_address %></p>
      <p><strong>Total Price:</strong> <%= number_to_currency(@order.total_price, unit: '₹') %></p>
      <p><strong>Payment Mode:</strong> Cash on delivery</p>
      <p><strong>Payment Status:</strong> Pending</p>

      <h6 class="mt-4">Order Items:</h6>
      <ul class="list-group">
        <% @order.line_items.each do |line_item| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
              <%= image_tag line_item.product.img_url, class: 'img-thumbnail mr-2', style: 'width: 50px; height: 50px;' %>
              <div>
                <% if line_item.status=="Cancelled" %>
                <strong style="text-decoration: line-through; color: red;" ><%= line_item.product.name %></strong><br>
                <% elsif line_item.status=="Dispatched" %>
                <strong style="color: green;" ><%= line_item.product.name %></strong><br>
                <% else %>
                <strong ><%= line_item.product.name %></strong><br>
                <% end %>

                <span class="text-muted">Quantity: <%= line_item.quantity %></span><br>
                <span class="text-muted">Price: <%= number_to_currency(line_item.price, unit: '₹') %></span><br>
                <strong class="text-muted">Status: <%= line_item.status %></strong> 
              </div>
            </div>
            <span class="font-weight-bold">
              <%= number_to_currency(line_item.price * line_item.quantity, unit: '₹') %>
            </span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <% if @order.status!="Cancelled"%>
  <div class="text-center">
<%= link_to 'Cancel Order',@order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'%>
  </div>
  <% end %>
</div>
