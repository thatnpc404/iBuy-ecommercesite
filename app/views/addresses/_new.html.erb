<div class="checkout" style="width:47%;">

 
 <%= stylesheet_link_tag 'checkout', media: 'all', data: { turbolinks: false } %> 

  <div class="address">
  
    <h3>Address</h3>
<%= form_with(model: @address, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :shipping_address, 'Address Line' %>
    <%= form.text_field :shipping_address, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :city, 'City' %>
    <%= form.text_field :city, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :state, 'State' %>
    <%= form.text_field :state, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :zip_code, 'Zip Code' %>
    <%= form.text_field :zip_code, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :country, 'Country' %>
    <%= form.text_field :country, class: 'form-control', required: true %>
  </div>

  </div>
    <%= link_to "Saved Address", addresses_path("source": :checkout), local: true, class: "btn btn-primary ml-4" %>

  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>



  </div>
</div>
