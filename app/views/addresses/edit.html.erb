
 <div class="checkout">
  <%= stylesheet_link_tag 'checkout', media: 'all', data: { turbolinks: false } %>

  <div class="address ml-5">
    <h3>Edit Address</h3>
    <%= form_with(model: @address, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :shipping_address, 'Address Line' %>
        <%= form.text_field :shipping_address, class: 'form-control', value: @address.shipping_address, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :city, 'City' %>
        <%= form.text_field :city, class: 'form-control', value: @address.city, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :state, 'State' %>
        <%= form.text_field :state, class: 'form-control', value: @address.state, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :zip_code, 'Zip Code' %>
        <%= form.text_field :zip_code, class: 'form-control', value: @address.zip_code, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :country, 'Country' %>
        <%= form.text_field :country, class: 'form-control', value: @address.country, required: true %>
      </div>

      <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Update Address</button>
      </div>
    <% end %>
  </div>
</div> 
 
